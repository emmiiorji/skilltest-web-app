{
  "name": "skilltest-new",
  "version": "1.0.0",
  "description": "A platform to create skill tests for users.",
  "main": "server.ts",
  "scripts": {
    "dev": "nodemon --watch src -e ts,hbs src/server.ts",
    "build": "rm -rf dist && tsc -p tsconfig.json && pnpm run copy-views",
    "copy-views": "mkdir -p dist/views && cp -R src/views dist",
    "start": "node dist/server.js",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:create": "pnpm run typeorm migration:create",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/database/connection.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/database/connection.ts",
    "migration:revert": "pnpm run typeorm migration:revert -- -d src/database/connection.ts",
    "db:drop": "echo 'WARNING: This command will delete all entries in the database. This action is non-reversible and data cannot be recovered. Are you sure you want to proceed? (y/n)' && read -r response && [ \"$response\" = \"y\" ] && typeorm-ts-node-commonjs schema:drop -d src/database/connection.ts || echo 'Database drop aborted.'",
    "db:reset": "pnpm run db:drop && rm -rf src/database/migrations && pnpm run migration:generate src/database/migrations/InitialMigration && pnpm run migration:run",
    "seed:all": "ts-node src/database/seeds/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/qwillio-live/skilltest-new.git"
  },
  "keywords": [
    "skilltest",
    "ansuman"
  ],
  "author": "Ansuman Agarwal",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/qwillio-live/skilltest-new/issues"
  },
  "homepage": "https://github.com/qwillio-live/skilltest-new#readme",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/formbody": "^7.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/secure-session": "^7.5.1",
    "@fastify/sensible": "^5.6.0",
    "@fastify/static": "^7.0.4",
    "@fastify/view": "^9.1.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "fastify-helmet": "^7.1.0",
    "handlebars": "^4.7.8",
    "mysql2": "^3.11.2",
    "typeorm": "^0.3.20",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.5.4",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  }
}

<h1>All Groups</h1>

<button id="openModalBtn">Create New Group</button>

<table>
  <thead>
    <tr>
      <th>Group ID</th>
      <th>Group Name</th>
      <th>Creation Date</th>
      <th>User Count</th>
      <th>Countries of Users</th>
      <th>Test IDs</th>
    </tr>
  </thead>
  <tbody>
    {{#each groups}}
    <tr>
      <td data-label="Group ID">{{this.id}}</td>
      <td data-label="Group Name">{{this.name}}</td>
      <td data-label="Creation Date">{{formatDate this.createdAt}}</td>
      <td data-label="User Count">{{this.profile_count}}</td>
      <td data-label="Countries of Users">{{this.profile_countries}}</td>
      <td data-label="Test IDs">{{this.test_ids}}</td>
    </tr>
    {{/each}}
  </tbody>
</table>

<div id="createGroupModal" class="modal">
  <div class="modal-content">
    <h2>Create New Group</h2>
    <form action="/admin/group/create" method="POST">
      <input type="number" name="group_id" placeholder="Group ID" required>
      <input type="text" name="group_name" placeholder="Group Name" required>
      <button type="submit">Create</button>
    </form>
  </div>
</div>

<script src="/js/allGroups.js"></script>

<style>
.modal {
  display: none;
  position: fixed;
  z-index: 1;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.4);
}

.modal-content {
  background-color: #fefefe;
  margin: 15% auto;
  padding: 20px;
  border: 1px solid #888;
  width: 80%;
}
</style>
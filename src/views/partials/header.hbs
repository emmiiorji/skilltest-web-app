<header style="background-color: #3498db; color: white; padding: 20px; border-radius: 8px 8px 0 0;">
    <h1 style="margin: 0;">{{title}}</h1>
    <nav style="margin-top: 10px;">
            {{#if url}}
                {{#if (startsWith url '/admin')}}
                    <a href="/admin/profile/create?key={{key}}" style="color: white; text-decoration: none; margin-right: 10px;">Create Profile</a>
                    <a href="/admin/profile/list?key={{key}}" style="color: white; text-decoration: none; margin-right: 10px;">View Profiles</a>
                    <a href="/admin/group/list?key={{key}}" style="color: white; text-decoration: none; margin-right: 10px;">Groups</a>
                    <a href="/admin/test/create?key={{key}}" style="color: white; text-decoration: none; margin-right: 10px;">Create Test</a>
                    <a href="/admin/template/list?key={{key}}" style="color: white; text-decoration: none; margin-right: 10px;">Templates</a>
                    <a href="/admin/template/create?key={{key}}" style="color: white; text-decoration: none; margin-right: 10px;">Create Template</a>
                {{/if}}
            {{else}}
                <!-- Admin links when URL is not available -->
                <a href="/admin/profile/create?key={{key}}" style="color: white; text-decoration: none; margin-right: 10px;">Create Profile</a>
                <a href="/admin/profile/list?key={{key}}" style="color: white; text-decoration: none; margin-right: 10px;">View Profiles</a>
                <a href="/admin/group/list?key={{key}}" style="color: white; text-decoration: none; margin-right: 10px;">Groups</a>
                <a href="/admin/test/create?key={{key}}" style="color: white; text-decoration: none; margin-right: 10px;">Create Test</a>
                <a href="/admin/template/list?key={{key}}" style="color: white; text-decoration: none; margin-right: 10px;">Templates</a>
                <a href="/admin/template/create?key={{key}}" style="color: white; text-decoration: none; margin-right: 10px;">Create Template</a>
            {{/if}}
    </nav>
</header>
<header class="header">
    <h1>{{title}}</h1>
    <nav class="nav" id="mainNav">
            {{#if url}}
                {{#if (startsWith url '/admin')}}
                    <a href="/admin/group/list?key={{key}}">Groups</a>
                    <a href="/admin/test/create?key={{key}}">Create Test</a>
                    <a href="/admin/template/list?key={{key}}">Templates</a>
                {{/if}}
            {{else}}
                <!-- Admin links when URL is not available -->
                <a href="/admin/group/list?key={{key}}">Groups</a>
                <a href="/admin/test/create?key={{key}}">Create Test</a>
                <a href="/admin/template/list?key={{key}}">Templates</a>
            {{/if}}
    </nav>
</header>

<style>
/* Hide mobile nav toggle button on all devices */
.mobile-nav-toggle {
    display: none !important;
}

/* Ensure navigation is always visible and properly styled for mobile */
.nav {
    display: flex !important;
    opacity: 1 !important;
    visibility: visible !important;
    position: static !important;
    background: transparent !important;
    box-shadow: none !important;
    transform: none !important;
}

/* Mobile-friendly navigation styling */
@media (max-width: 768px) {
    .header {
        flex-direction: column;
        align-items: center;
        padding: 5px 10px; /* Reduced padding */
        min-height: auto; /* Remove any fixed height */
    }
    
    .header h1 {
        font-size: 1.2rem; /* Smaller title */
        margin: 5px 0; /* Reduced margins */
        line-height: 1.2;
    }
    
    .nav {
        flex-direction: column;
        gap: 4px; /* Reduced gap between links */
        margin-top: 8px; /* Reduced top margin */
        width: 100%;
    }
    
    .nav a {
        text-align: center;
        padding: 6px 10px; /* Reduced padding */
        border-radius: 4px;
        background-color: rgba(255, 255, 255, 0.1);
        margin: 1px 0; /* Reduced margins */
        display: block;
        width: 100%;
        box-sizing: border-box;
        font-size: 0.85rem; /* Smaller text */
        line-height: 1.3;
    }
}

/* Desktop styling */
@media (min-width: 769px) {
    .header {
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }
    
    .nav {
        flex-direction: row;
        gap: 20px;
    }
    
    .nav a {
        padding: 8px 16px;
    }
}
</style>

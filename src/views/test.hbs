<div class="min-h-screen bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-lg max-w-md w-full">
    <h1 class="text-3xl font-bold mb-6 text-center text-gray-800">Test Parameters</h1>
    {{#if user}}
      <p class="mb-4"><span class="font-semibold">User:</span> <span class="text-indigo-600">{{user}}</span></p>
    {{/if}}
    {{#if test}}
      <p class="mb-4"><span class="font-semibold">Test:</span> <span class="text-pink-600">{{test}}</span></p>
    {{/if}}
    {{#unless user}}{{#unless test}}
      <p class="text-gray-600 text-center">No parameters provided.</p>
    {{/unless}}{{/unless}}
  </div>
</div>
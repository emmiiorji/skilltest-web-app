<div class="flex-container">
    <div class="question-container">
      <div id="question-div">
        {{{question}}}
      </div>
      <form id="answerForm" method="POST" action="/test/attend?user={{userLinkId}}&test={{test_id}}">
        <input type="hidden" name="answer_type" id="answer_type" value="{{answer_type}}">
        <input type="hidden" name="test_id" id="test_id" value="{{test_id}}">
        <input type="hidden" name="question_id" id="question_id" value="{{question_id}}">
        <input type="hidden" name="user_id" id="user_id" value="{{user_id}}">
        <input type="hidden" name="result_salt" id="result_salt" value="{{result_salt}}">
        {{{answer_html}}}
        <div class="submit-container">
          <button type="submit" id="submitButton" class="btn btn-blue">
            Submit Answer
          </button>
        </div>
      </form>
    </div>
</div>
<style>
  /* Question text styling */
  #question-div {
    font-family: 'Roboto', sans-serif;
    font-weight: 400;
    font-size: 1rem;
    line-height: 1.5;
  }

  /* Existing styles */
  .flex-container {
    display: flex;
    flex-direction: column;
    height: 100vh;
    max-width: 800px;
    margin: 0 auto;
  }
  h1 {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 1rem;
  }
  #question-div {
    font-weight: 400;
    font-size: 1rem;
    line-height: 1.5;
    margin-bottom: 1rem;
    max-width: 100%;
    max-height: 100%;
    overflow: auto;
  }
  .submit-container {
    margin-top: 2rem;
    text-align: center;
    padding: 5px;
    @media (min-width: 768px) {
      padding: 20px;
    }
  }
  #submitButton {
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    cursor: pointer;
  }
  #submitButton:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  @keyframes spin {
    to { transform: rotate(360deg); }
  }

  /* Loading state for button */
  #submitButton.loading {
    opacity: 0.7;
    cursor: not-allowed;
  }

  @media (min-width: 768px) {
    .flex-container {
      flex-direction: row;
      justify-content: center;
    }
    .content-left, .content-right {
      width: 50%;
    }

    /* Question text styling for desktop - same as mobile */
    #question-div {
      font-family: 'Roboto', sans-serif;
      font-weight: 400;
      font-size: 1rem;
      line-height: 1.5;
    }
  }
</style>

<script>
  window.trackingConfig = {{{json tracking_config}}};
</script>
<script src="/js/attend.js"></script>
